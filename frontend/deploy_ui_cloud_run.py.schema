info:
  title: CDS UI Deployment Manager
  author: Google Inc.
  description: Template code to deploy the CDS UI to Cloud Run

required:
- containerTag
- firebaseApiKey
- region
- timeout


properties:
  firebaseApiKey:
    type: string
    description: Firebase API key

  cloudRunDeployName:
    type: string
    description: Cloud run service name that is displayed in the UI.
    default: cds-frontend-ui

  containerTag:
    type: string
    description: CDS UI Docker container tag

  region:
    type: string
    description: Google Cloud region to which this service should be deployed

  timeout:
    type: string
    description: Alloted time for the deployment to be successfull.
    
outputs:
  properties:
    functionName:
      type: string
      description: The name of the function created
